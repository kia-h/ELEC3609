@model PSP_EF.Models.Customer

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutBasic.cshtml";
}

@section style {
    <style type="text/css">
        body 
        {
            padding-top: 80px;
        }
        .btn-block
        {
            text-align: left;
            font-size: large;
            padding: 6px 8px 6px 8px
        }
    </style>
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h1 class="panel-title">Log in</h1>
                </div>
                <div class="container" style="padding-top: 20px; padding-bottom: 20px;">
                    @if (@ViewBag.Message != null)
                    {
                        <div class="alert alert-warning fade in">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            @ViewBag.Message
                        </div>
                    }

                    <form role="form" class="col-lg-8 form-horizontal" action="@Url.Action("Login", "CustomerAccount")" method="post">
                        @Html.ActionLink("Need an account? Sign up free!", "Register", "CustomerAccount")<br /><br />
                        <div class="form-group">
                            <label for="@Html.DisplayNameFor(model => model.Email)" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Email, new { @type = "email", @class = "form-control required", @placeholder = "Enter Your Email" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="@Html.DisplayNameFor(model => model.Password)" class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-10">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control required", @placeholder = "Enter Your Password" })
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default btn-primary">Log in</button>
                        &nbsp;<a href="#">Forgot your password?</a>
                    </form>
                    <div class="col-lg-4">
                        <h3 style="margin-top:0px">Or Log in with</h3>
                        <button type="button" class="btn btn-default btn-block"><img src="http://janebutton.com/wp-content/uploads/2010/07/Facebook_icon.png" width="32" height="32"/>&nbsp;&nbsp;Facebook</button>
                        <button type="button" class="btn btn-default btn-block"><img src="http://janebutton.com/wp-content/uploads/2010/07/TwitterIcon.png" width="32" height="32"/>&nbsp;&nbsp;Twitter</button>
                        <button type="button" class="btn btn-default btn-block"><img src="http://janebutton.com/wp-content/uploads/2010/07/linkedin_icon.png" width="32" height="32"/>&nbsp;&nbsp;Linkedin</button>
                        <button type="button" class="btn btn-default btn-block"><img src="https://cdn1.iconfinder.com/data/icons/yooicons_set01_socialbookmarks/512/social_google_box_blue.png" width="32" height="32"/>&nbsp;&nbsp;Google</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
