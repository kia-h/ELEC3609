@model PSP_EF.Models.Customer

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutBasic.cshtml";
}

@section style {
    <style type="text/css">
        body 
        {
            padding-top: 80px;
        }
        .btn-block
        {
            text-align: left;
            font-size: large;
            padding: 6px 8px 6px 8px
        }
    </style>
}

@if (ViewBag.Message != null)
{
    <h6>@ViewBag.Message</h6>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h1 class="panel-title">Sign up for FREE</h1>
                    </div>
                    <div class="container" style="padding-top: 20px; padding-bottom: 20px;">
                        @if (@ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-warning fade in">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                @ViewBag.ErrorMessage
                            </div>
                        }

                        <form role="form" class="col-lg-9 form-horizontal" action="@Url.Action("Register", "CustomerAccount")" method="post" , onsubmit="return validate()">
                            <div class="form-group">
                                <label for="@Html.DisplayNameFor(model => model.FirstName)" class="col-sm-4 control-label">First Name*</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control required", @placeholder = "Enter Your First Name" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="@Html.DisplayNameFor(model => model.LastName)" class="col-sm-4 control-label">Last Name*</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @placeholder = "Enter Your Last Name" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="@Html.DisplayNameFor(model => model.DateOfBirth)" class="col-sm-4 control-label">Date of birth</label>
                                <div class="input-group date col-sm-8" id="DOBPicker" data-date-format="mm/dd/yyyy">
                                    @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control", @readonly = true, @placeholder = "Select a Date" })
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="citylist" class="col-sm-4 control-label">City*</label>
                                <div class="col-sm-8">
                                    @Html.DropDownList("citylist", null, new { @class = "form-control required"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="@Html.DisplayNameFor(model => model.Suburb)" class="col-sm-4 control-label">Suburb</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.Suburb, new { @class = "form-control", @placeholder = "Enter Your Suburb" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="@Html.DisplayNameFor(model => model.Address)" class="col-sm-4 control-label">Address</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Enter Your Address" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="@Html.DisplayNameFor(model => model.Description)" class="col-sm-4 control-label">Description</label>
                                <div class="col-sm-8">
                                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Tell us about yourself" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="@Html.DisplayNameFor(model => model.Email)" class="col-sm-4 control-label">Email*</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.Email, new { @type = "email", @class = "form-control required", @placeholder = "Enter Your Email" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="@Html.DisplayNameFor(model => model.Password)" class="col-sm-4 control-label">Password*</label>
                                <div class="col-sm-8">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control required", @placeholder = "Enter Your Password" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="PasswordConfirmation" class="col-sm-4 control-label">Password Confirmation*</label>
                                <div class="col-sm-8">
                                    @Html.Password("PasswordConfirmation", null, new { @class = "form-control required", @placeholder = "Enter Your Password Again" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="@Html.DisplayNameFor(model => model.Phone)" class="col-sm-4 control-label">Phone No</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.Phone, new { @type = "tel", @class = "form-control", @placeholder = "Enter Your Phone Number" })
                                </div>
                            </div>
                            <div class="col-sm-8 col-sm-offset-4">
                                <p>* indicates required fields</p>
                                <button type="submit" class="btn btn-default btn-primary">Sign up</button>
                                &nbsp;@Html.ActionLink("Cancel", "Index", "Home")
                            </div>
                        </form>
                        <div class="col-lg-3">
                            <h3>Or Sign Up with</h3>
                            <button type="button" class="btn btn-default btn-block"><img src="http://janebutton.com/wp-content/uploads/2010/07/Facebook_icon.png" width="32" height="32"/>&nbsp;&nbsp;Facebook</button>
                            <button type="button" class="btn btn-default btn-block"><img src="http://janebutton.com/wp-content/uploads/2010/07/TwitterIcon.png" width="32" height="32"/>&nbsp;&nbsp;Twitter</button>
                            <button type="button" class="btn btn-default btn-block"><img src="http://janebutton.com/wp-content/uploads/2010/07/linkedin_icon.png" width="32" height="32"/>&nbsp;&nbsp;Linkedin</button>
                            <button type="button" class="btn btn-default btn-block"><img src="https://cdn1.iconfinder.com/data/icons/yooicons_set01_socialbookmarks/512/social_google_box_blue.png" width="32" height="32"/>&nbsp;&nbsp;Google</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section scripts {
    <script type="text/javascript">
        $('#DOBPicker').datetimepicker({
            weekStart: 1,
            autoclose: 1,
            startView: 2,
            minView: 2,
            endDate: new Date(),
            forceParse: 1
        });
    </script>
}